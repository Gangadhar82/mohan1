<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vL_for_networkDowntimeReport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:minHeight="60dp"
    android:layout_marginTop="5dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/vT_aocr_lblIPAddress"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="IP Address"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_aocr_lblComplaintNumber"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Complaint No"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_aocr_lblDowntimeType"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Downtime Type"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_aocr_lblNetworkProvider"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Network Provider"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_aocr_lblDowntimeStart"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Downtime Start"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_aocr_lblDowntimeEnd"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Downtime End"
        android:textColor="@color/black" />
</LinearLayout>