<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar_layout" />

    <ScrollView style="@style/RootLayoutScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/vL_afi_questionsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/vE_afi_addcomplaintdetails"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="start"
                android:hint="Add Complaint Details"
                android:inputType="textMultiLine"
                android:minHeight="150dp"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:minHeight="60dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/vT_afi_btnSubmit"
                    style="@style/ButtonsCustomStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/blue_light"
                    android:text="@string/submit" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>