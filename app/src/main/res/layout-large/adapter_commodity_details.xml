<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vL_apcd_commodityDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_light"
    android:gravity="center"
    android:minHeight="60dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2" />

    <TextView
        android:id="@+id/vT_apcd_lblCommodity"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_weight="1"
        android:text="commodity"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_apcd_lblDOQty"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_weight="1"
        android:text="D.O Qty"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_apcd_lblQtyRcvd"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_weight="1"
        android:text="Qty Rcvd"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_apcd_lblQtyintruck"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_weight="1"
        android:text="Qty in truck"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_apcd_lblLossGain"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_weight="1"
        android:text="Los/Gain"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_apcd_lblBalance"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_weight="1"
        android:text="Balance"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="start|center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/vE_apcd_QtyValue"
            android:layout_width="0dp"
            android:textSize="@dimen/text_view_size"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:inputType="number" />

        <TextView
            android:id="@+id/vT_apcd_lblKgs"
            android:layout_width="0dp"
            android:textSize="@dimen/text_view_size"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start|center"
            android:text="Kgs"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>
