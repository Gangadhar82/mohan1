<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar_layout" />

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        style="@style/RootLayoutScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vT_air_lblRCNumber"
                        style="@style/TitleTextViewStyle"
                        android:text="@string/ration_card_number" />

                    <EditText
                        android:id="@+id/vE_air_RCNumberValue"
                        style="@style/EditTextCustomStyle"
                        android:layout_width="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vT_air_lblAllocationNumber"
                        style="@style/TitleTextViewStyle"
                        android:text="@string/allocation_number" />

                    <Spinner
                        android:id="@+id/vS_air_AllocationNumberSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edit_text_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vT_air_lblAllocationMonth"
                        style="@style/TitleTextViewStyle"
                        android:text="Allocation Month" />

                    <Spinner
                        android:id="@+id/vS_air_allocationMonthSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edit_text_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vT_air_btnGetDetails"
                        style="@style/ButtonsCustomStyle"
                        android:layout_width="match_parent"
                        android:background="@color/red"
                        android:text="GET DETAILS" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vL_air_contentsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/vL_air_cardDetailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/vT_air_lblCardNumber"
                        style="@style/TitleTextViewStyle"
                        android:text="@string/Card_Number" />

                    <TextView
                        android:id="@+id/vT_air_CardNumberValue"
                        style="@style/TitleTextViewStyle"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblCardType"
                        style="@style/TitleTextViewStyle"
                        android:layout_marginLeft="20dp"
                        android:text="@string/Card_Type" />

                    <TextView
                        android:id="@+id/vT_air_CardTypeValue"
                        style="@style/TitleTextViewStyle"
                        android:layout_marginLeft="5dp"
                        android:text="BPL"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblWaiverCount"
                        style="@style/TitleTextViewStyle"
                        android:layout_marginLeft="20dp"
                        android:text="@string/Wavier_Count" />

                    <TextView
                        android:id="@+id/vT_air_WaiverCountValue"
                        style="@style/TitleTextViewStyle"
                        android:layout_marginLeft="5dp"
                        android:text="2/5"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vL_air_familyMembersTileLayout"
                    style="@style/TileLayoutStyle"
                    android:background="@color/red"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/vT_air_lblName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="@string/name"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblAge"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="@string/age"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblGender"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="@string/gender"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblRelation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="@string/relation"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblAadharStatus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="@string/aadhar_status"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ListView
                    android:id="@+id/vL_air_relationsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:visibility="gone"
                    tools:listitem="@layout/adapter_family_members"></ListView>


                <LinearLayout
                    android:id="@+id/vL_air_commodityTileLayout"
                    style="@style/TileLayoutStyle"
                    android:layout_marginTop="20dp"
                    android:background="@color/red"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/vT_air_lblCommodity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".9"
                        android:gravity="start|center"
                        android:text="@string/commodity"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblSchemeName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="start|center"
                        android:text="@string/scheme_name"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblFPSSQuantity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="@string/fps_stock_qty"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblEligibleQuantity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/eligible_qty"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblGivenQuantity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/given_qty"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblBalanceQuantity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/balance_qty"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblQFSale"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/qty_for_sale"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblPQuantity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:text="@string/price_or_qty"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vT_air_lblPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="@string/price"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ListView
                    android:id="@+id/vL_air_commodityList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:visibility="gone"
                    tools:listitem="@layout/adapter_family_members"></ListView>

                <LinearLayout
                    android:id="@+id/vL_air_totalTileLayout"
                    style="@style/TileLayoutStyle"
                    android:background="@color/white"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/vT_air_lblTotal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/total"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/vT_air_TotalValue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:gravity="center|right"
                        android:paddingRight="30dp"
                        android:text="0"
                        android:textColor="@color/red" />
                </LinearLayout>

                <TextView
                    android:id="@+id/vT_air_btnMakeSale"
                    style="@style/ButtonsCustomStyle"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:background="@color/red"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp"
                    android:text="@string/make_sale"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>