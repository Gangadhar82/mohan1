<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vL_pfm_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/pfm_linear_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/settings_menu_background"
        android:minHeight="@dimen/pfm_linear_minimum_height"
        android:orientation="horizontal"
        android:padding="@dimen/pfm_linear_padding">

        <ImageView
            android:layout_width="@dimen/pfm_image_view_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:maxHeight="@dimen/pfm_image_view_max_height"
            android:scaleType="fitXY"
            android:src="@drawable/icon_default_female" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/pfm_linear_margin_left"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vT_pfm_lblMemberDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/member_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/pfm_text_view_header_size"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_marginBottom="@dimen/view_margin_bottom"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:background="@color/border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vT_pfm_lblName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pfm_text_view_margin_right"
                        android:layout_weight="1"
                        android:text="@string/name"
                        android:textSize="@dimen/pfm_text_view_size" />

                    <TextView
                        android:id="@+id/vT_pfm_nameValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="xxxx"
                        android:textColor="@color/black"
                        android:textSize="@dimen/pfm_text_view_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_marginBottom="@dimen/view_margin_bottom"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:background="@color/border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vT_pfm_lblGender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pfm_text_view_margin_right"
                        android:layout_weight="1"
                        android:text="@string/gender"
                        android:textSize="@dimen/pfm_text_view_size" />

                    <TextView
                        android:id="@+id/vT_pfm_genderValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Female"
                        android:textColor="@color/black"
                        android:textSize="@dimen/pfm_text_view_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_marginBottom="@dimen/view_margin_bottom"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:background="@color/border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vT_pfm_lblRelation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pfm_text_view_margin_right"
                        android:layout_weight="1"
                        android:text="@string/relation"
                        android:textSize="@dimen/pfm_text_view_size" />

                    <TextView
                        android:id="@+id/vT_pfm_relationValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wife"
                        android:textColor="@color/black"
                        android:textSize="@dimen/pfm_text_view_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_marginBottom="@dimen/view_margin_bottom"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:background="@color/border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vT_pfm_lblAadharStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pfm_text_view_margin_right"
                        android:layout_weight="1"
                        android:text="@string/uid_aadhar_status"
                        android:textSize="@dimen/pfm_text_view_size" />

                    <TextView
                        android:id="@+id/vT_pfm_aadharStatusValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="pending"
                        android:textColor="@color/black"
                        android:textSize="@dimen/pfm_text_view_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:background="@color/border" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/pfm_left_linear_margin_left"
                android:layout_weight=".7"
                android:background="@drawable/emblem"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vT_pfm_lblEnterAadharNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pfm_text_view_margin_bottom"
                    android:layout_marginTop="@dimen/pfm_text_view_margin_top"
                    android:text="@string/enter_aadhar_no"
                    android:textColor="@color/black"
                    android:textSize="@dimen/pfm_text_view_size"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/vE_pfm_aadharNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="-- --"
                    android:minHeight="40dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/vT_pfm_continueButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pfm_text_view_button_height"
                    android:layout_marginBottom="@dimen/pfm_text_view_margin_bottom"
                    android:background="@color/yellow"
                    android:gravity="center"
                    android:text="CONTINUE"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/vT_pfm_lblOr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pfm_text_view_button_height"
                    android:layout_marginBottom="@dimen/pfm_text_view_margin_bottom"
                    android:gravity="center"
                    android:text="@string/str_or"
                    android:textColor="@color/border"
                    android:textSize="@dimen/pfm_text_view_button_size"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/vT_pfm_issueRationButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pfm_text_view_button_height"
                    android:layout_marginBottom="@dimen/pfm_text_view_margin_bottom"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="ISSUE RATION"
                    android:textColor="@color/white"
                    android:textSize="@dimen/pfm_text_view_button_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vT_pfm_cancelButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pfm_text_view_button_height"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="@dimen/pfm_text_view_margin_top"
                    android:foregroundGravity="bottom"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="@color/border"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageView
                android:id="@+id/vI_pfm_closeButton"
                android:layout_width="@dimen/pfm_image_view_close_btn_width_height"
                android:layout_height="@dimen/pfm_image_view_close_btn_width_height"
                android:layout_gravity="right|top"
                android:src="@drawable/icon_close_button" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>