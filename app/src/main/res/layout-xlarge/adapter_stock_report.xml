<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:gravity="center"
    android:layout_marginTop="5dp"
    android:minHeight="60dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/vT_asr_lblCommodityName"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Commodity Name"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_asr_lblAllocatedQty"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Allocated Qty"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_asr_lblRcvdQty"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Reveived Qty"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_asr_lblTotalSoldQty"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Total Sold Qty"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/vT_asr_lblTotalBalanceQty"
        android:layout_width="0dp"
        android:textSize="@dimen/text_view_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Total Balance Qty"
        android:textColor="@color/black" />
</LinearLayout>