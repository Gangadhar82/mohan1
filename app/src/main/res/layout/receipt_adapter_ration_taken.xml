<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:weightSum="6">

    <TextView
        android:id="@+id/vT_RART_commodityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="1.2"
        android:text="Commodity"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vT_RART_soldQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight=".9"
        android:text="Sold Qty"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vT_RART_ecoPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:text="Eco Price"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vT_RART_cipOrSipRs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="1.1"
        android:text="CIP/SIP Rs"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vT_RART_subsidy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="1.2"
        android:text="Subsidy Rs."
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vT_RART_totalPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight=".6"
        android:text="Total"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>